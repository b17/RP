<div>
  <div id="announce-month-current" class="inline-block">
    <div class="search-calendar-top-button" style="visibility: hidden"></div>
    <%= calendar filter.options do |option| %>
        <% if option.active %>
            <div class="active calendar-cell-active">
              <%= link_to '', option.cancel_url, :class => 'calendar-cell-active'  %>
              <!--<div class="calendar-count-circle"></div>-->
            </div>
        <% else %>
            <div>
              <%= link_to  option.apply_url, :class => 'calendar-cell-in-active' do %>
                  <!--<div class="calendar-count-circle"></div>-->
              <% end %>
            </div>
        <% end %>
    <% end %>
    <div class="search-calendar-bottom-button" onclick="$(this).parent().addClass('gone');$('#announce-month-next').removeClass('gone')"></div>
  </div>
  <div id="announce-month-next" class="inline-block gone">
    <div class="search-calendar-top-button" onclick="$(this).parent().addClass('gone');$('#announce-month-current').removeClass('gone')"></div>
    <%= calendar filter.options, :month => Time.now.months_since(1).month do |option| %>
        <% if option.active %>
            <div class="active">
              <%= link_to 'X', option.cancel_url %>
            </div>
        <% else %>
            <div>
              <%= link_to option.apply_url do %>
                  <div class="calendar-count-circle"><%= option.total %></div>
              <% end %>
            </div>
        <% end %>
    <% end %>
    <div class="search-calendar-bottom-button"  onclick="$(this).parent().addClass('gone');$('#announce-month-afternext').removeClass('gone')"></div>
  </div>
  <div id="announce-month-afternext" class="inline-block gone">
    <div class="search-calendar-top-button"  onclick="$(this).parent().addClass('gone');$('#announce-month-next').removeClass('gone')" ></div>
    <%= calendar filter.options, :month => Time.now.months_since(2).month do |option| %>
        <% if option.active %>
            <div class="active">
              <%= link_to 'X', option.cancel_url %>
            </div>
        <% else %>
            <div>
              <%= link_to option.apply_url do %>
                  <div class="calendar-count-circle"><%= option.total %></div>
              <% end %>
            </div>
        <% end %>
    <% end %>
  </div>
</div>