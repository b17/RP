<div class="page-root">
  <div class="inline-block wight-70pc">
    <div class="breadcrumb-new"><a href="/">Most popular</a></div>
    <div id="announce-list">
      <% for item in @items %>
          <div class="item-wrapper">
            <div class="header"><a href="/details/<%= item.id %>" class="white-link-style"><%= @stringUtil.new.words_limit(item.title, 24) %></a>
            </div>
            <img class="image-gold-size-with_minus_margin" src="<%= item.image %>">

            <div class="bot-header-tag-panel">

              <% unless item.tag_1.nil? %>
                  <i><a href="/tag/<%= item.tag_1 %>" class="style-tag"><%= item.tag_1 %></a></i>
              <% end %>
              <% unless item.tag_2.nil? %>
                  <i><a href="/tag/<%= item.tag_2 %>" class="style-tag"><%= item.tag_2 %></a></i>
              <% end %>
              <% unless item.tag_3.nil? %>
                  <i><a href="/tag/<%= item.tag_3 %>" class="style-tag"><%= item.tag_3 %></a></i>
              <% end %>

            </div>
          </div>
      <% end %>


    </div>
    <% unless @random.nil? %>
        <div class="breadcrumb-new">
          <a href="/random">
            Some random new
          </a>
        </div>


        <div class="inline">
          <% for item in @random %>
              <div class="item-wrapper">
                <div class="header">
                  <a href="/details/<%= item.id %>" class="white-link-style"><%= @stringUtil.new.words_limit(item.title, 24) %></a>
                </div>
                <img class="image-gold-size-with_minus_margin" src="<%= item.image %>">

                <div class="bot-header-tag-panel">

                  <% unless item.tag_1.nil? %>
                      <i><a href="/tag/<%= item.tag_1 %>" class="style-tag"><%= item.tag_1 %></a></i>
                  <% end %>
                  <% unless item.tag_2.nil? %>
                      <i><a href="/tag/<%= item.tag_2 %>" class="style-tag"><%= item.tag_2 %></a></i>
                  <% end %>
                  <% unless item.tag_3.nil? %>
                      <i><a href="/tag/<%= item.tag_3 %>" class="style-tag"><%= item.tag_3 %></a></i>
                  <% end %>

                </div>
              </div>
          <% end %>

        </div>
        </div>
    <% end %>

    <div class="news inline-block">
      <% for item in @news %>
          <div class="news-item">
            <a href="<%= item.id %>"><h3><%= item.title %></h3></a>

            <div class="vertical">
              <div class="inline-block"><img src="<%= item.image %>" class="news-image inline-block"></div>
              <div class="article-short inline-block">
                <a class="inline-block" href="<%= item.id %>"><%= item.short_info %></a>
              </div>
            </div>
            <hr>
          </div>
      <% end %>
    </div>
    </div>