<div class="content-part" id="my-announces-part">
  <div>
    <h3 class="inline-block">Active</h3>
  </div>
  <a href="<%= add_path %>">
    <div class="btn-info pull-left wight-100p add-button crackable">Add</div>
  </a><br>

  <div class="announces-list text-align: left;">
    <div class="announces-list-element">
      <div class="list-element-text inline-block" title="<%= t 'announce.announce_name' %>">
        <%= t 'announce.announce_name' %>
      </div>

      <div class="pull-right control-block-size inline-block">
        <img class="selectable-image" src="images/delete-64.png"
             alt="Editing" title="Disable it and move to trash folder">
      </div>
      <div class="pull-right control-block-size inline-block">
        <img class="selectable-image" src="images/edit_property-64.png"
             alt="Editing" title="Change this announce">
      </div>
      <div class="pull-right date fixed-size-60pt"><%= t 'announce.creation_date' %></div>
      <div class="pull-right date fixed-size-60pt"><%= t 'announce.date' %></div>
    </div>
  </div>
  <hr>
  <% unless @active.nil? %>
      <% for item in @active %>

          <div class="announces-list text-align: left;">
            <div class="announces-list-element">
              <div class="list-element-text inline-block" title="<%= item.title %>">
                <a href="/info/<%= item.id %>"><%= item.title_resize 32 %></div>

              <div class="pull-right control-block-size inline-block">
                <a href="trash/<%= item.id %>"><img class="selectable-image" src="images/delete-64.png"
                                                    alt="Editing" title="Disable it and move to trash folder"></a>
              </div>
              <div class="pull-right control-block-size inline-block">
                <a href="edit/<%= item.id %>"><img class="selectable-image" src="images/edit_property-64.png"
                                                   alt="Editing" title="Change this announce"></a>
              </div>
              <div class="pull-right date "><%= item.created_at_short %></div>
              <div class="pull-right date  fixed-size-60pt"><%= item.action_date %></div>


            </div>
          </div>

      <% end %>
  <% end %>
  <% unless @disabled.nil? %>
      <h3>Disabled</h3>
      <% for item in @disabled %>

          <div class="announces-list text-align: left;">
            <div class="announces-list-element">
              <div class="list-element-text inline-block" title="<%= item.title %>">
                <a href="/info/<%= item.id %>"><%= item.title_resize 32 %></div>
              <div class="pull-right control-block-size inline-block">
                <a href="activate/<%= item.id %>"><img class="selectable-image" src="/images/add-48.png"
                                                       alt="Editing" title="Activate it"></a>
              </div>
              <div class="pull-right control-block-size inline-block">
                <a href="edit/<%= item.id %>"><img class="selectable-image" src="/images/edit_property-64.png"
                                                   alt="Editing" title="Change this announce"></a>
              </div>
              <div class="pull-right date fixed-size-60pt "><%= item.created_at_short %></div>
              <div class="pull-right date fixed-size-60pt"><%= item.action_date %></div>
              <div title="Delete forever" class="inline-block close height-middle padding-right-big">
                <a href="delete/<%= item.id %>">
                  <img src="images/delete_forever.png"
                       style="width: 30pt;height: 30pt;"></a>
              </div>

            </div>
          </div>

      <% end %>
  <% end %>


</div>